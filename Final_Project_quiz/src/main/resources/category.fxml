    <Button text="Database" onAction="#handleCategory"
            style="-fx-font-size:16px; -fx-padding:10 20 10 20; -fx-background-color: #2e7d32; -fx-text-fill:white; -fx-background-radius:5;"/>
    <Button text="AI" onAction="#handleCategory"
